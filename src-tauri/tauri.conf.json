{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "umichan-ts",
  "version": "0.1.0",
  "identifier": "com.umichan-ts.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "UmiChan",
        "width": 1200,
        "height": 775,
        "minWidth": 680,
        "minHeight": 300,
        "url": "/",
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ]
  }
}
